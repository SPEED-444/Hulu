<!-- SONG VIEW -->
<div id="song">
    <h1>I want to tell u something</h1>

    <audio id="player" controls>
        <source src="song.mp3" type="audio/mpeg">
    </audio>

    <div class="lyrics" id="lyrics"></div>
</div>

<script>
function showSong() {
    document.getElementById("front").style.display = "none";
    document.getElementById("song").style.display = "block";

    const audio = document.getElementById("player");
    audio.currentTime = 124; // 2:04
    audio.play();
}

const lyrics = [
    { time: 124, text: "zaraa paas to aa mere" },
    { time: 128, text: "dheere se chhoo jaa muje" },
    { time: 133, text: "bin tere ab na guzaara" },
    { time: 138, text: "tere liye hum hain jiye ðŸ’—" },
    { time: 143, text: "har aansu piyeâ€¦" }
];

let currentLine = 0;
const audio = document.getElementById("player");
const lyricsBox = document.getElementById("lyrics");

audio.addEventListener("timeupdate", () => {
    if (currentLine < lyrics.length &&
        audio.currentTime >= lyrics[currentLine].time) {

        lyricsBox.innerHTML += `<p class="line">${lyrics[currentLine].text}</p>`;
        currentLine++;
    }
});
</script>

